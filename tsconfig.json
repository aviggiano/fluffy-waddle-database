{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
